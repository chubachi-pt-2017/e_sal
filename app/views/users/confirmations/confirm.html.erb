<div class="container-lrg flex">
  <div class="col-7">
    <h2>利用者情報を確認する</h2>
    <%= form_for @user, url: { action: 'confirm' }, html: { class: "form-table" } do |f| %>
      <%= f.hidden_field :confirmation_token %>
      <%= f.hidden_field :confirmed_at, value: Time.zone.now %>
      <%= f.hidden_field :term_flg %>
    
      <table class="table">
        <tr>
          <th><%= f.label t('.password') %></th>
          <td>
            <%= f.hidden_field :password %>
          </td>
        </tr>
        <tr>
          <th><%= f.label t('.password_confirmation') %></th>
          <td>
            <%= f.hidden_field :password_confirmation %>
          </td>
        </tr>
        <tr>
          <th><%= f.label t('.student_id') %></th>
          <td>
            <%= f.hidden_field :student_id %>
            <%= @user.student_id %>
          </td>
        </tr>
        <tr>
          <th><%= f.label t('.student_id_confirmation') %></th>
          <td>
            <%= f.hidden_field :student_id_confirmation %>
            <%= @user.student_id_confirmation %>
          </td>
        </tr>
        <tr>
          <th><%= f.label t('.user_name') %></th>
          <td>
            <%= f.hidden_field :user_name %>
            <%= @user.user_name %>
          </td>
        </tr>
        <tr>
          <th><%= f.label t('.second_email') %></th>
          <td>
            <%= f.hidden_field :second_email %>
            <%= @user.second_email %>
          </td>
        </tr>
        <tr>
          <th><%= f.label t('.course_type') %></th>
          <td>
            <%= f.hidden_field :course_type %>
            <%= @user.course_type_i18n %>
          </td>
        </tr>
        <tr>
          <th><%= f.label t('.age') %></th>
          <td>
            <%= f.hidden_field :age %>
            <%= @user.age_i18n %>
          </td>
        </tr>
        <tr>
          <th><%= f.label t('.gender') %></th>
          <td>
            <%= f.hidden_field :gender %>
            <%= @user.gender_i18n %>
          </td>
        </tr>
        <tr>
          <th><%= f.label t('.job') %></th>
          <td>
            <%= f.hidden_field :job %>
            <%= @user.job_i18n %>
          </td>
        </tr>
        <tr>
          <th><%= f.label t('.job_desc') %></th>
          <td>
            <%= f.hidden_field :job_desc %>
            <%= @user.job_desc.to_s %>
          </td>
        </tr>
      </table>
      
      <div class="submit-container">
        <%= f.submit '登録する', class: "submit-button" %>
      </div>
      
      <div class="submit-container">
        <%= f.submit '戻る', class: "submit-button" %>
      </div>
    <% end %>
  </div>
</div>