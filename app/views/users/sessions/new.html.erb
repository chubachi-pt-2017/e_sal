<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-container" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-title"><h2>Sign in</h2></div>
  
  <div class="form-title">
    <%= f.label :email %><br />
  </div>
  <%= f.email_field :email, autofocus: true, class: "form-field" %>

  <div class="form-title">
    <%= f.label :password %><br />
  </div>
  <%= f.password_field :password, autocomplete: "off", class: "form-field" %>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="submit-container">
    <%= f.submit "Sign in", class: "submit-button" %>
  </div>
<%= render "users/shared/links" %>
<% end %>
